@using FootTrap.Services.ViewModels.Shoes
@model OrderShoeViewModel

<div class="product">
    <div class="product-image">
        <img src="@Model.ShoeImageUrl">
    </div>
    <div class="product-details">
        <div class="product-title">@Model.Name</div>
        <p class="product-description">@Model.Description</p>
    </div>
    <div class="product-price">@Model.Price</div>
    <div class="product-quantity">
        @if (!Model.IsEnabled)
        {
            <input type="text" disabled="disabled" aria-valuemin="1" value="@Model.Size" />
        }
        else
        {
            <select asp-for="@Model.Size" class="form-control" aria-required="true">
                @foreach (var size in Model.Sizes)
                {
                    <option value="@size.Id">@size.Number</option>
                }
            </select>
        }


    </div>
    <div class="product-removal">
        <button class="remove-product">
            Remove
        </button>

        <input asp-for="Id" type="hidden" id="dishId" class="ids" value="@Model.Id" />
    </div>

    <div class="product-line-price">Model.Price</div>
</div>

