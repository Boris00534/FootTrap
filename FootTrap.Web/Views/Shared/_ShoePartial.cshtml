@using FootTrap.Web.Extensions
@model FootTrap.Services.ViewModels.Shoes.ShoeViewModel



<div class="col-lg-4 col-md-6" style="margin-left: 50px;">
    <div class="product-card link-effect pe-3 pb-3">
        <figure class="zoom-effect">
            <a class="zoom-in" asp-action="Details" asp-controller="Shoes" asp-route-id="@Model.Id">
                <img src="@Model.ShoePictureUrl" alt="stories" class="lgpostImg img-fluid" style="max-width: 80%;height: 80%;">
            </a>
        </figure>
        <div class="story-title-wrap my-3 d-flex justify-content-between" style="max-width: 80%;">
            <h3 class="story-title" style="height: fit-content;"><a asp-action="Details" asp-controller="Shoes" asp-route-id="@Model.Id">@Model.Name</a></h3>
            <a asp-action="Details" asp-controller="Shoes" asp-route-id="@Model.Id" class="price" data-after="ADD TO CART">
                <span>$ @Model.Price</span>
            </a>
            
        </div>

        <div class="d-flex">
            @if (User.IsInRole("Admin"))
            {
                <div class="btn_box">
                    <a href="" class="view_more-link">
                        Edit
                    </a>
                </div>
                <div class="btn_box-delete" style="margin-left: 20px;">
                    <a href="" class="view_more-link">
                        Delete
                    </a>
                </div>
            }
        </div>
        
        
    </div>
</div>