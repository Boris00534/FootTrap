@using FootTrap.Services.ViewModels.Shoes
@model DetailsShoeViewModel


<div class="container-shoe">
    <div class="imgBx">
        <img src="@Model.ShoePictureUrl" height="400px" alt="Nike Jordan Proto-Lyte Image">
    </div>
    <div class="details">
        <div class="content">
            <h2>
                @Model.Name <br>
                <span>@Model.Category</span>
            </h2>
            <p>
                @Model.Description
            </p>
            <div class="mb-3">
                <label class="form-label-add-edit text-dark">Size</label>
                <select  class="form-control" aria-required="true">
                    @foreach(var size in Model.Sizes)
                    {
                        <option value="@size.Id">@size.Number</option>
                    }

                </select>
            </div>
            <h3>$ @Model.Price</h3>
            <br />
            <a>Buy Now</a>
        </div>
    </div>
</div>

@section Styles{
    <link rel="stylesheet" href="~/css/detailsShoe.css" asp-append-version="true" />

}